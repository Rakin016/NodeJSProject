    </div>
</nav>
<div class="container mt-2 text-center">
    <div class="row">
        <div class="col-12 col-md-12 offset-md-0">
            <div class="card">
                <table class="table table-hover table-striped text-center">
                    <thead class="thead-dark">
                        <tr>
                            <th>Id</th>
                            <th>Username</th>
                            <th>User type</th>
                            <th>Option</th>
                            <th colspan="2">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                       <%for (var i =0; i<results.length;i++){%>
                           <tr>
                               <td><%=results[i].id%></td>
                               <td><%=results[i].username%></td>
                               <td><%=results[i].status%></td>
                               <td><button class="btn btn-success <%=results[i].disable%> accept" name="accept" id="accept" data-toggle="modal" data-target="#accept<%=results[i].id%>">See details</button></td>
                               <td colspan="2">
                               <button class="btn btn-danger <%=results[i].disable%> decline" name="decline" id="decline" data-toggle="modal" data-target="#decline<%=results[i].id%>">Probation</button>
                               <button class="btn btn-danger <%=results[i].disable%> decline" name="decline" id="decline" data-toggle="modal" data-target="#decline<%=results[i].id%>">Delete</button> </td>
                           </tr>
                      <% }%>
                    </tbody>
                </table>
            </div>

        </div>
        <div class="col-auto">
        </div>
    </div>
</div>

<script type="application/javascript" src="/jquery/jquery.min.js"></script>
